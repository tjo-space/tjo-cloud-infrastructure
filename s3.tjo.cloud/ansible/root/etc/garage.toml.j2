metadata_dir = "/srv/garage/meta"
data_dir = "/srv/garage/data"
metadata_snapshots_dir = "/srv/garage/snapshots"

db_engine = "lmdb"
metadata_auto_snapshot_interval = "6h"

replication_factor = 3
consistency_mode = "consistent"
compression_level = 3

block_size = "1M"
block_ram_buffer_max = "1Gi"
block_max_concurrent_reads = 16

rpc_secret = "{{ garage_rpc_secret }}"
rpc_bind_addr = "[::]:3901"
rpc_public_addr_subnet = "10.0.0.0/16"

[s3_api]
s3_region = "tjo-cloud"
api_bind_addr = "[::]:3900"
root_domain = "api.s3.tjo.cloud"

[s3_web]
bind_addr = "[::]:3902"
root_domain = ".web.s3.tjo.cloud"
index = "index.html"

[admin]
api_bind_addr = "[::]:3903"
admin_token = "{{ garage_admin_token }}"
metrics_token = "{{ garage_metrics_token }}"
